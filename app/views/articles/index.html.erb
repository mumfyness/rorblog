<div class="view">
  <h1>Photographer reviews</h1>

  <div class="tablediv">

    <p><%= link_to 'Add Review', new_article_path %><p/>

    <table>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
      </tr>

      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article) %></td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'Back', welcome_index_url %>

  </div>
  <div class="photodiv">
    <img src="<%= asset_path 'LightedCenterPiece.jpg' %>" align="center" width="100%" >
  </div>
</div>
