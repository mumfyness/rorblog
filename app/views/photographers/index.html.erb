<div class="view">
  <h1>Wedding Photographers</h1>

  <div class="tablediv">

    <p><%= link_to 'Choose a Photographer', new_photographer_path %><p/>

    <table>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th></th>
      </tr>

      <% @photographers.each do |photographer| %>
        <tr>
          <td><%= photographer.name %></td>
          <td><%= photographer.address %></td>
          <td><%= photographer.phone %></td>
          <td><%= link_to 'Show', photographer_path(photographer) %></td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'Back', welcome_index_url %>
  </div>

</div>
