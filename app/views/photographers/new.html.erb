<div class="view">
  <H1>Photographer Information</H1>

  <div class="formdiv">
    <%= form_with scope: :photographer, url: photographers_path, local: true do |form| %>

      <% if @photographer.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@photographer.errors.count, "error") %> prohibited
            this photographer from being saved:
          </h2>
          <ul>
            <% @photographer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="entrydiv">
        <p>
          <%= form.label :name %><br>
          <%= form.text_field :name %>
        </p>

        <p>
          <%= form.label :address %><br>
          <%= form.text_field :address %>
        </p>

        <p>
          <%= form.label :phone %><br>
          <%= form.text_field :phone %>
        </p>

        <p>
          <%= form.submit %>
        </p>
      </div>

    <% end %>
  </div>

  <%= link_to 'Back', photographers_path %>
  
</div>
