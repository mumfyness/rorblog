<h1 style="width:100%; margin:0; background-color: navy; color: white; height:2em">
  Add Photo
</h1>
  <%= form_with scope: :photo, url: photos_path, local: true do |form| %>

  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@photo.errors.count, "error") %> prohibited
        this photo from being saved:
      </h2>
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="width:100%; margin:0; background-color: moccasin; color: navy;">
    <p>
      <%= form.label :wedding %><br>
      <%= form.text_field :wedding %>
    </p>

    <p>
      <%= form.label :photographer %><br>
      <%= form.text_field :photographer %>
    </p>

    <p>
      <%= form.label :image %><br>
      <%= form.text_field :image %>
    </p>

    <p>
      <%= form.submit %>
    </p>
    <%= link_to 'Back', photos_path %>
  </div>

<% end %>

<div style="background-color:black; ">
  <img src="<%= asset_path 'LightedCenterPiece.jpg' %>" align="center" width="100%" >
</div>
